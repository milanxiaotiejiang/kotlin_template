<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="state_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:enabled">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="normalBackgroundColor">@color/dark_orange</item>
        <item name="normalStrokeWidth">0dp</item>
        <item name="normalTextColor">@android:color/white</item>
        <item name="pressedBackgroundColor">@color/dark_orange</item>
        <item name="pressedStrokeWidth">0dp</item>
        <item name="pressedTextColor">@android:color/white</item>
        <item name="radius">26dp</item>
        <item name="unableBackgroundColor">@color/dark_orange</item>
        <item name="unableStrokeWidth">0dp</item>
        <item name="unableTextColor">@android:color/white</item>
    </style>

    <style name="tv_12_black">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tv_24_white">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tv_36_black">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>