<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainTheme" parent="AppTheme">
        <!--        <item name="listPreferredItemPaddingLeft">20dp</item>-->
        <!--        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>-->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>
    </style>

    <style name="MenuTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="AppTheme.SwipeBack.Fullscreen.lanucher" parent="AppBaseTheme">
        <item name="android:windowFullscreen">true</item>
        <!--        <item name="android:windowBackground">@drawable/lanucher</item>-->
    </style>

    <style name="normal_bottom_button">
        <item name="android:layout_width">210dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/bg_btn_agree</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/txt_btn_agree_selector</item>
    </style>

    <style name="CommonTitleBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_title_bar_height</item>
        <item name="centerTextColor">@color/colorBlack</item>
        <item name="centerTextSize">14sp</item>
        <item name="leftTextColor">@color/colorBlack</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="leftTextSize">12sp</item>
        <item name="rightTextColor">@color/colorBlack</item>
        <item name="rightTextSize">12sp</item>
        <item name="titleBarHeight">@dimen/common_title_bar_height</item>
    </style>

    <style name="tv_10_color_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="tv_12_color_333333">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color333333</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="tv_14_color_black">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tv_14_color_1d9add">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color1D9ADD</item>
    </style>

    <style name="tv_16_black">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tv_16_grey">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorCCCCCC</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tv_20_color_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/colorBlack</item>
    </style>

    <!--对话框样式-->

    <style name="AppBaseTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppBaseTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppBaseTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.SurfaceStyle">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="TextAppearance.CardTitle" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/textBody</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance.Body" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/textBody</item>
    </style>

</resources>